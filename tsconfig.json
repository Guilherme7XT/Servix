{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/": ["components/"],
      "@hooks/": ["hooks/"],
      "@app/": ["app/"]
    },
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "babel.config.js"]
}